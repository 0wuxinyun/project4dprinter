#:import MeshLinePlot kivy.garden.graph.MeshLinePlot
<ScreenHOME>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Button:
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 1
                    root.manager.current = 'screen_data'
                background_color: (0,0,0)
                BoxLayout:
                    pos: self.parent.pos
                    size: self.parent.size
                    orientation: "vertical"
                    Image:
                        source: 'data.png'
                        pos: self.parent.pos
                    Label:
                        width: 100
                        text: "Data"
                
            Button:
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.transition.duration = 1
                    root.manager.current = 'screen_repair'
                background_color: (0,0,0)
                BoxLayout:
                    pos: self.parent.pos
                    size: self.parent.size
                    orientation: "vertical"
                    Image:
                        source: 'repair.png'
                        pos: self.parent.pos
                    Label:
                        width: 100
                        text: "Repair"
        BoxLayout:
            Image:
                source: "./ConstantThornyGalapagospenguin-small.gif"
<MyButton@Button>: 
    size_hint: [None, None] 
    size: [400, 100] 
 
<ScreenDATA>:
    AnchorLayout:

        anchor_x: 'left'
        anchor_y: 'top' 


        MyButton:
            text: "HOME"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'screen_home'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top' 
        MyButton: 
            text: 'Update' 
            on_press: root.update()
    BoxLayout:
        size_hint: [0.9, 0.9]
        Graph:
            id: graph
            xlabel: "Date"
            ylabel: "Usage"



<ScreenREPAIR>:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top' 


        MyButton:
            text: "HOME"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'screen_home'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top' 
        MyButton: 
            text: 'start' 
            on_press: root.start()
    AnchorLayout:
        anchor_y: 'bottom' 
        MyButton: 
            text: 'Reset' 
            on_press: root.number = 0 
    BoxLayout:         

        Label: 
            text: str(round(root.number))
